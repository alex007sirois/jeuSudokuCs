<Window x:Class="Sudoku.Gui.BarreProgression"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BarreProgression" Height="150" Width="700" 
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid >
        <TextBlock Name="progression" TextAlignment="Center" Text="Progression de la résolution" FontSize="19" Margin="0,0,-0.358,-7.925"/>
        <Border BorderThickness="2" BorderBrush="Black" Margin="40,39,41.642,48.264">
            <ProgressBar Name="barre" Minimum="0" Maximum="100"/>
        </Border>
        <Button Content="Fermer" Visibility="Hidden" Name="fermer" Margin="307,65,312.642,10.264" Width="75" Height="20" Click="fermer_Click"/>
    </Grid>
</Window>
